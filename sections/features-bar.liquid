<section
  class="features-bar"
  style="
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_vertical }}px {{ section.settings.padding_horizontal }}px;
  "
>
  <div
    class="page-width features-bar__inner"
    style="
      border: 1px solid {{ section.settings.border_color }};
      border-radius: {{ section.settings.border_radius }}px;
      color: {{ section.settings.text_color }};
    "
  >
    {% for block in section.blocks %}
      <div class="features-bar__item" {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
  <div
    class="features-bar__icon"
    style="
      background-color: {{ section.settings.icon_color }};
      -webkit-mask-image: url({{ block.settings.icon | image_url }});
      mask-image: url({{ block.settings.icon | image_url }});
    "
  ></div>
{% endif %}

        <div class="features-bar__text">
          <div class="features-bar__title">
            {{ block.settings.title }}
          </div>
          <div class="features-bar__subtitle">
            {{ block.settings.subtitle }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.features-bar {
  width: 100%;
}

.features-bar__inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24px;
  padding: 0;
}

.features-bar__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
  justify-content: center;
  text-align: left;
  max-width: 200px;
}

.features-bar__icon {
  width: 36px;
  height: 36px;
  object-fit: contain;
}

.features-bar__title {
  font-size: 20px;
  font-weight: 500;
  line-height: 1.2;
  text-align: center;
}

.features-bar__subtitle {
  font-size: 14px;
  opacity: 0.7;
}

@media (max-width: 768px) {
  .features-bar__inner {
    flex-direction: column;
  }

  .features-bar__item {
    justify-content: flex-start;
  }
}
.features-bar__icon {
  width: 36px;
  display: flex !important;
  height: 36px;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;

  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  -webkit-mask-size: contain;

  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: contain;
}

</style>

{% schema %}
{
  "name": "Features bar",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#111111"
    },
    {
        "type": "color",
        "id": "icon_color",
        "label": "Icon color",
        "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Vertical padding",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Secure"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "payment"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features bar",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
