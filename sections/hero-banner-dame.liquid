<div id="hero-banner-{{ section.id }}" class="hero-banner-wrapper {% if section.settings.custom_classes %}{{ section.settings.custom_classes }}{% endif %}">
  <section class="dame-hero-section">
    {% if section.settings.background_image != blank %}
      <div class="dame-hero-image">
        {{ section.settings.background_image | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'dame-hero-bg-image', alt: section.settings.background_image.alt | escape }}
      </div>
    {% endif %} 

    <div class="dame-hero-overlay"></div>

    <div class="dame-hero-content-wrapper">
      <div class="dame-hero-content">
        {% if section.settings.show_rating %}
          <div class="dame-rating">
            {% if section.settings.rating_icon != blank %}
              <div class="dame-stars">{{ section.settings.rating_icon }}</div>
            {% endif %}
            {% if section.settings.rating_text != blank %}
              <div class="dame-rating-text">{{ section.settings.rating_text }}</div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.title != blank %}
          <h1 class="dame-hero-title">{{ section.settings.title }}</h1>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <div class="dame-hero-subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}

        <div class="dame-hero-buttons">
          {% if section.settings.button_primary_text != blank %}
            <a href="{{ section.settings.button_primary_url }}" class="dame-btn dame-btn-primary">
              {{ section.settings.button_primary_text }}
            </a>
          {% endif %}

          {% if section.settings.button_secondary_text != blank %}
            <a href="{{ section.settings.button_secondary_url }}" class="dame-btn dame-btn-secondary">
              {{ section.settings.button_secondary_text }}
            </a>
          {% endif %}
        </div>
      </div>

      {% if section.blocks.size > 0 and section.settings.features_position == 'side' %}
        <div class="dame-features-bar dame-features-side">
          {% if section.settings.features_background_image != blank %}
            {{ section.settings.features_background_image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'dame-features-bg', alt: 'Features background' }}
          {% endif %}

          <div class="dame-features-content">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'feature' %}
                  <div class="dame-feature-item" {{ block.shopify_attributes }}>
                    {% if block.settings.feature_icon != blank %}
                      <div class="dame-feature-icon">{{ block.settings.feature_icon }}</div>
                    {% endif %}
                    {% if block.settings.feature_title != blank %}
                      <h3 class="dame-feature-title">{{ block.settings.feature_title }}</h3>
                    {% endif %}
                    {% if block.settings.feature_description != blank %}
                      <p class="dame-feature-description">{{ block.settings.feature_description }}</p>
                    {% endif %}
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    {% if section.blocks.size > 0 and section.settings.features_position == 'bottom' %}
      <div class="dame-features-bar dame-features-bottom">
        {% if section.settings.features_background_image != blank %}
          {{ section.settings.features_background_image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'dame-features-bg', alt: 'Features background' }}
        {% endif %}

        <div class="dame-features-content">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'feature' %}
                <div class="dame-feature-item" {{ block.shopify_attributes }}>
                  {% if block.settings.feature_icon != blank %}
                    <div class="dame-feature-icon">{{ block.settings.feature_icon }}</div>
                  {% endif %}
                  {% if block.settings.feature_title != blank %}
                    <h3 class="dame-feature-title">{{ block.settings.feature_title }}</h3>
                  {% endif %}
                  {% if block.settings.feature_description != blank %}
                    <p class="dame-feature-description">{{ block.settings.feature_description }}</p>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </section>
</div>

