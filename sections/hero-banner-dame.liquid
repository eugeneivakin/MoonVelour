<script>
(function() {
  const heroBanner = document.getElementById('hero-banner-{{ section.id }}');
  const heroImage = heroBanner?.querySelector('.dame-hero-bg-image');

  if (!heroImage || !heroBanner) return;

  function updateParallax() {
    const scrolled = window.pageYOffset;
    const bannerRect = heroBanner.getBoundingClientRect();
    const bannerTop = bannerRect.top + scrolled;
    const bannerHeight = bannerRect.height;

    // Only apply parallax when banner is visible in viewport
    if (scrolled + window.innerHeight > bannerTop && scrolled < bannerTop + bannerHeight) {
      const relativeScroll = scrolled - bannerTop;
      const parallaxSpeed = 0.5; // Adjust speed (0.5 = moves half speed of scroll)
      const yPos = relativeScroll * parallaxSpeed;

      heroImage.style.transform = `translateY(${yPos}px)`;
    }
  }

  // Throttle function for better performance
  let ticking = false;
  function requestTick() {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateParallax();
        ticking = false;
      });
      ticking = true;
    }
  }

  window.addEventListener('scroll', requestTick, { passive: true });
  window.addEventListener('resize', updateParallax);

  // Initial call
  updateParallax();
})();
</script>

