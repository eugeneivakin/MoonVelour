<div id="reviews-{{ section.id }}" class="reviews-slider-wrapper {% if section.settings.custom_classes %}{{ section.settings.custom_classes }}{% endif %}">
  <section class="dame-reviews-section">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="dame-reviews-header">
        {% if section.settings.section_title != blank %}
          <h2 class="dame-reviews-title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <div class="dame-reviews-subtitle">{{ section.settings.section_subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <slider-component class="slider-mobile-gutter">
        <div class="dame-reviews-slider-container">
          <div class="dame-reviews-slider slider slider--everywhere" id="Slider-{{ section.id }}" role="list">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'review' %}
                  <div class="dame-review-card slider__slide" id="Slide-{{ section.id }}-{{ forloop.index }}" {{ block.shopify_attributes }} role="listitem">
                    <div class="dame-review-content">
                      {% if block.settings.show_stars %}
                        <div class="dame-review-stars">
                          {% for i in (1..block.settings.rating) %}
                            <svg viewBox="0 0 12 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M5.99975 0L7.34678 4.14573H11.7059L8.17929 6.70793L9.52632 10.8537L5.99975 8.29146L2.47319 10.8537L3.82022 6.70793L0.293649 4.14573H4.65272L5.99975 0Z" fill="{{ section.settings.stars_color }}"/>
                            </svg>
                          {% endfor %}
                        </div>
                      {% endif %}

                      {% if block.settings.review_text != blank %}
                        <div class="dame-review-text">{{ block.settings.review_text }}</div>
                      {% endif %}

                      {% if block.settings.author_name != blank %}
                        <p class="dame-review-author">{{ block.settings.author_name | upcase }}</p>
                      {% endif %}
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>

          {% if section.settings.show_navigation %}
            <div class="dame-reviews-navigation slider-buttons">
              <button type="button" class="dame-nav-arrow slider-button slider-button--prev" name="previous" aria-label="Previous review">
                <svg aria-hidden="true" focusable="false" class="icon icon-caret" viewBox="0 0 10 6">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                </svg>
              </button>
              <button type="button" class="dame-nav-arrow slider-button slider-button--next" name="next" aria-label="Next review">
                <svg aria-hidden="true" focusable="false" class="icon icon-caret" viewBox="0 0 10 6">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                </svg>
              </button>
            </div>
          {% endif %}
        </div>
      </slider-component>
    {% endif %}
  </section>
</div>

<style>
  :root {
    --dame-reviews-max-width: {{ section.settings.max_width }};
    --dame-reviews-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --dame-reviews-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --dame-reviews-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --dame-reviews-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --dame-reviews-title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --dame-reviews-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --dame-reviews-title-color: {{ section.settings.title_color }};
    --dame-reviews-subtitle-size-desktop: {{ section.settings.subtitle_size_desktop }}px;
    --dame-reviews-subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
    --dame-reviews-subtitle-color: {{ section.settings.subtitle_color }};
    --dame-reviews-text-size-desktop: {{ section.settings.review_text_size_desktop }}px;
    --dame-reviews-text-size-mobile: {{ section.settings.review_text_size_mobile }}px;
  }

  .reviews-slider-wrapper {
    background-color: {{ section.settings.section_background_color }};
    padding-top: var(--dame-reviews-padding-top-desktop);
    padding-bottom: var(--dame-reviews-padding-bottom-desktop);
    padding-left: 0;
    padding-right: 0;
    overflow: visible;
  }

  @media screen and (max-width: 749px) {
    .reviews-slider-wrapper {
      padding-top: var(--dame-reviews-padding-top-mobile);
      padding-bottom: var(--dame-reviews-padding-bottom-mobile);
      padding-left: 0;
      padding-right: 0;
    }
  }

  #reviews-{{ section.id }} .dame-reviews-section {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  #reviews-{{ section.id }} .dame-reviews-header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  #reviews-{{ section.id }} .dame-reviews-title {
    font-size: var(--dame-reviews-title-size-desktop);
    color: var(--dame-reviews-title-color);
    font-weight: {{ section.settings.title_font_weight }};
    margin: 0 0 15px 0;
    letter-spacing: -0.5px;
  }

  .dame-reviews-title p {
    margin: 0;
  }

  #reviews-{{ section.id }} .dame-reviews-subtitle p {
    font-size: var(--dame-reviews-subtitle-size-desktop);
    color: var(--dame-reviews-subtitle-color);
    margin: 0;
    font-weight: {{ section.settings.subtitle_font_weight }};
    letter-spacing: 0.2px;
    opacity: 0.8;
  }

  #reviews-{{ section.id }} .dame-reviews-slider-container {
    width: 100%;
    position: relative;
  }

  #reviews-{{ section.id }} .dame-reviews-slider {
    display: flex;
    gap: {{ section.settings.cards_gap }}px;
    padding: {{ section.settings.slider_padding_vertical }}px 0;
    scroll-padding-left: {{ section.settings.slider_padding_horizontal }}px;
  }

  #reviews-{{ section.id }} .dame-reviews-slider::after {
    content: '';
    width: 0;
    padding-left: {{ section.settings.slider_padding_horizontal }}px;
  }

  #reviews-{{ section.id }} .dame-review-card:first-child {
    margin-left: {{ section.settings.slider_padding_horizontal }}px;
  }

  #reviews-{{ section.id }} .dame-review-card {
    flex: 0 0 auto;
    width: calc((100% - (2 * {{ section.settings.cards_gap }}px)) / 3);
    min-width: {{ section.settings.card_min_width }}px;
  }

  #reviews-{{ section.id }} .dame-review-content {
    background: {{ section.settings.card_bg_color }};
    padding: {{ section.settings.card_padding }}px;
    border-radius: {{ section.settings.card_border_radius }}px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    height: 100%;
  }

  #reviews-{{ section.id }} .dame-review-stars {
    display: flex;
    gap: {{ section.settings.stars_gap }}px;
    margin-bottom: {{ section.settings.stars_margin_bottom }}px;
  }

  #reviews-{{ section.id }} .dame-review-stars svg {
    width: {{ section.settings.star_size }}px;
    height: {{ section.settings.star_size }}px;
  }

  #reviews-{{ section.id }} .dame-review-text {
    font-size: var(--dame-reviews-text-size-desktop);
    line-height: {{ section.settings.review_text_line_height }};
    color: {{ section.settings.review_text_color }};
    margin-bottom: {{ section.settings.text_margin_bottom }}px;
    font-weight: {{ section.settings.review_text_font_weight }};
    letter-spacing: -0.2px;
  }

  #reviews-{{ section.id }} .dame-review-author {
    font-size: {{ section.settings.author_size }}px;
    color: {{ section.settings.author_color }};
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 700;
    margin: 0;
  }

  #reviews-{{ section.id }} .dame-reviews-navigation {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ section.settings.navigation_gap }}px;
    padding: 20px 60px;
  }

  #reviews-{{ section.id }} .dame-nav-arrow {
    width: {{ section.settings.arrow_size }}px;
    height: {{ section.settings.arrow_size }}px;
    background: {{ section.settings.arrow_bg_color }};
    border: none;
    cursor: pointer;
    color: {{ section.settings.arrow_color }};
    font-size: {{ section.settings.arrow_font_size }}px;
    transition: transform 0.3s;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #reviews-{{ section.id }} .dame-nav-arrow .icon {
    width: 20px;
    height: 20px;
  }

  #reviews-{{ section.id }} .dame-nav-arrow:hover {
    transform: scale(1.2);
    background: {{ section.settings.arrow_hover_bg_color }};
  }

  #reviews-{{ section.id }} .dame-nav-arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    transform: scale(1);
  }

  @media screen and (max-width: 749px) {
    #reviews-{{ section.id }} .dame-reviews-header {
      padding-left: {{ section.settings.slider_padding_horizontal_mobile }}px;
      padding-right: {{ section.settings.slider_padding_horizontal_mobile }}px;
    }

    #reviews-{{ section.id }} .dame-reviews-title {
      font-size: var(--dame-reviews-title-size-mobile);
    }

    #reviews-{{ section.id }} .dame-reviews-subtitle {
      font-size: var(--dame-reviews-subtitle-size-mobile);
    }

    #reviews-{{ section.id }} .dame-reviews-slider {
      padding: {{ section.settings.slider_padding_vertical_mobile }}px 0;
      scroll-padding-left: {{ section.settings.slider_padding_horizontal_mobile }}px;
    }

    #reviews-{{ section.id }} .dame-reviews-slider::after {
      padding-left: {{ section.settings.slider_padding_horizontal_mobile }}px;
    }

    #reviews-{{ section.id }} .dame-review-card:first-child {
      margin-left: {{ section.settings.slider_padding_horizontal_mobile }}px;
    }

    #reviews-{{ section.id }} .dame-review-card {
      flex: 0 0 calc(100vw - ({{ section.settings.slider_padding_horizontal_mobile }}px * 2));
      max-width: {{ section.settings.card_width_mobile }}px;
    }

    #reviews-{{ section.id }} .dame-review-content {
      padding: {{ section.settings.card_padding_mobile }}px;
    }

    #reviews-{{ section.id }} .dame-review-text {
      font-size: var(--dame-reviews-text-size-mobile);
    }
  }
</style>

