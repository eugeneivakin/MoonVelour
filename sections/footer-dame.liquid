<div id="footer-{{ section.id }}" class="footer-dame-wrapper {% if section.settings.custom_classes %}{{ section.settings.custom_classes }}{% endif %}">
  <footer class="dame-footer">
    <div class=" page-width dame-footer-content">
      {% if section.settings.show_newsletter %}
        <div class="dame-newsletter-section">
          {% if section.settings.newsletter_title != blank %}
            <h2 class="dame-newsletter-title">{{ section.settings.newsletter_title }}</h2>
          {% endif %}

          {% form 'customer', class: 'dame-newsletter-form' %}
            <div class="dame-newsletter-input-group">
              <input type="email"
                     name="contact[email]"
                     class="dame-newsletter-input"
                     placeholder="{{ section.settings.email_placeholder }}"
                     required
                     aria-label="Email address">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <span class="dame-newsletter-separator">|</span>
              <button type="submit" class="dame-newsletter-submit">
                {{ section.settings.submit_button_text }}
              </button>
            </div>

            {% if form.posted_successfully? %}
              <div class="dame-newsletter-success">
                {{ section.settings.success_message }}
              </div>
            {% endif %}

            {% if form.errors %}
              <div class="dame-newsletter-error">
                {{ form.errors.messages['email'] }}
              </div>
            {% endif %}
          {% endform %}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="dame-footer-links">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'link_column' %}
                <div class="dame-footer-column" {{ block.shopify_attributes }}>
                  {% if block.settings.column_title != blank %}
                    <h6 class="dame-column-title">{{ block.settings.column_title }}</h6>
                  {% endif %}

                  {% if block.settings.links != blank %}
                    <ul class="dame-column-links">
                      {% assign links_array = block.settings.links | split: '||' %}
                      {% for link_item in links_array %}
                        {% assign link_parts = link_item | split: '|' %}
                        {% if link_parts.size == 2 %}
                          <li>
                            <a href="{{ link_parts[1] | strip }}">{{ link_parts[0] | strip }}</a>
                          </li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>

              {% when 'copyright' %}
                <div class="dame-footer-column dame-copyright-column" {{ block.shopify_attributes }}>
                  {% if block.settings.column_title != blank %}
                    <h6 class="dame-column-title">{{ block.settings.column_title }}</h6>
                  {% endif %}

                  <div class="dame-footer-copyright">
                    {% if block.settings.copyright_text != blank %}
                      <div class="dame-copyright-text">{{ block.settings.copyright_text }}</div>
                    {% endif %}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </footer>
</div>

<style>
  :root {
    --dame-footer-max-width: {{ section.settings.max_width }};
    --dame-footer-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --dame-footer-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --dame-footer-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --dame-footer-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --dame-footer-padding-left-desktop: {{ section.settings.padding_left_desktop }}px;
    --dame-footer-padding-right-desktop: {{ section.settings.padding_right_desktop }}px;
    --dame-footer-padding-left-mobile: {{ section.settings.padding_left_mobile }}px;
    --dame-footer-padding-right-mobile: {{ section.settings.padding_right_mobile }}px;
    --dame-footer-newsletter-title-size-desktop: {{ section.settings.newsletter_title_size_desktop }}px;
    --dame-footer-newsletter-title-size-mobile: {{ section.settings.newsletter_title_size_mobile }}px;
