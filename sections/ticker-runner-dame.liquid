<div id="ticker-{{ section.id }}" class="ticker-runner-wrapper {% if section.settings.custom_classes %}{{ section.settings.custom_classes }}{% endif %}">
  <section class="dame-ticker-section">
    <div class="dame-ticker-wrapper">
      <div class="dame-ticker-content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'ticker_item' %}
              <div class="dame-ticker-item" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <div class="dame-ticker-icon">{{ block.settings.icon }}</div>
                {% endif %}
                {% if block.settings.text != blank %}
                  <span class="dame-ticker-text">{{ block.settings.text }}</span>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}

        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'ticker_item' %}
              <div class="dame-ticker-item">
                {% if block.settings.icon != blank %}
                  <div class="dame-ticker-icon">{{ block.settings.icon }}</div>
                {% endif %}
                {% if block.settings.text != blank %}
                  <span class="dame-ticker-text">{{ block.settings.text }}</span>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </section>
</div>

<style>
  :root {
    --dame-ticker-max-width: {{ section.settings.max_width }};
    --dame-ticker-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --dame-ticker-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --dame-ticker-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --dame-ticker-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --dame-ticker-text-size-desktop: {{ section.settings.text_size_desktop }}px;
    --dame-ticker-text-size-mobile: {{ section.settings.text_size_mobile }}px;
    --dame-ticker-text-color: {{ section.settings.text_color }};
    --dame-ticker-icon-size-desktop: {{ section.settings.icon_size_desktop }}px;
    --dame-ticker-icon-size-mobile: {{ section.settings.icon_size_mobile }}px;
    --dame-ticker-item-gap: {{ section.settings.item_gap }}px;
    --dame-ticker-animation-speed: {{ section.settings.animation_speed }}s;
  }

  .ticker-runner-wrapper {
    background-color: {{ section.settings.section_background_color }};
    padding-top: var(--dame-ticker-padding-top-desktop);
    padding-bottom: var(--dame-ticker-padding-bottom-desktop);
    overflow: hidden;
  }

  @media screen and (max-width: 749px) {
    .ticker-runner-wrapper {
      padding-top: var(--dame-ticker-padding-top-mobile);
      padding-bottom: var(--dame-ticker-padding-bottom-mobile);
    }
  }
</style>

<style>
  #ticker-{{ section.id }} .dame-ticker-section {
    max-width: var(--dame-ticker-max-width);
    margin: 0 auto;
    overflow: hidden;
  }

  #ticker-{{ section.id }} .dame-ticker-wrapper {
    display: flex;
    width: fit-content;
    animation: dame-ticker-scroll var(--dame-ticker-animation-speed) linear infinite;
  }

  {% if section.settings.pause_on_hover %}
    #ticker-{{ section.id }} .dame-ticker-wrapper:hover {
      animation-play-state: paused;
    }
  {% endif %}

  @keyframes dame-ticker-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  #ticker-{{ section.id }} .dame-ticker-content {
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  #ticker-{{ section.id }} .dame-ticker-item {
    display: flex;
    align-items: center;
    margin-right: var(--dame-ticker-item-gap);
  }

  #ticker-{{ section.id }} .dame-ticker-icon {
    width: var(--dame-ticker-icon-size-desktop);
    height: var(--dame-ticker-icon-size-desktop);
    margin-right: {{ section.settings.icon_text_gap }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #ticker-{{ section.id }} .dame-ticker-icon svg {
    width: 100%;
    height: 100%;
  }

  #ticker-{{ section.id }} .dame-ticker-text {
    font-size: var(--dame-ticker-text-size-desktop);
    color: var(--dame-ticker-text-color);
    font-weight: {{ section.settings.text_font_weight }};
    letter-spacing: {{ section.settings.text_letter_spacing }}px;
  }

  @media screen and (max-width: 749px) {
    #ticker-{{ section.id }} .dame-ticker-icon {
      width: var(--dame-ticker-icon-size-mobile);
      height: var(--dame-ticker-icon-size-mobile);
    }

    #ticker-{{ section.id }} .dame-ticker-text {
      font-size: var(--dame-ticker-text-size-mobile);
    }
  }
</style>

