<div
  id="categories-{{ section.id }}"
  class="page-width categories-grid-wrapper {% if section.settings.custom_classes %}{{ section.settings.custom_classes }}{% endif %}"
>
  <section class="dame-categories-section">
    {% if section.settings.show_section_title and section.settings.section_title != blank %}
      <div class="dame-categories-header">
        <h2 class="dame-categories-section-title">{{ section.settings.section_title }}</h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="dame-categories-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'category' %}
              <a
                href="{{ block.settings.button_url }}"
                class="dame-category-card {% if block.settings.use_image_as_background %}dame-card-bg-image{% endif %}"
                {{ block.shopify_attributes }}
                {% if block.settings.use_image_as_background and block.settings.category_image != blank %}
                  style="background-image: url('{{ block.settings.category_image | image_url: width: 800 }}');"
                {% else %}
                  style="background-color: {{ block.settings.card_bg_color }};"
                {% endif %}
              >
                {% if block.settings.use_image_as_background and block.settings.show_overlay %}
                  <div
                    class="dame-category-overlay"
                    style="display: block; background-color: {{ block.settings.overlay_color }}; opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"
                  ></div>
                {% endif %}

                <div class="dame-category-header">
                  {% if block.settings.badge_text != blank %}
                    <span
                      class="dame-category-badge"
                      style="background-color: {{ block.settings.badge_bg_color }}; color: {{ block.settings.badge_text_color }};"
                    >
                      {{ block.settings.badge_text }}
                    </span>
                  {% endif %}

                  {% if block.settings.category_title != blank %}
                    <h2 class="dame-category-title" style="color: {{ block.settings.title_color }};">
                      {{ block.settings.category_title }}
                    </h2>
                  {% endif %}
                </div>

                {% if block.settings.use_image_as_background == false %}
                  <div class="dame-category-image">
                    {% if block.settings.category_image != blank %}
                      {{
                        block.settings.category_image
                        | image_url: width: 600
                        | image_tag: loading: 'lazy', class: 'dame-category-img', alt: block.settings.category_image.alt
                        | escape
                      }}
                    {% elsif block.settings.category_icon != blank %}
                      <div class="dame-category-icon">{{ block.settings.category_icon }}</div>
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.button_text != blank %}
                  {% comment %}
                    <span class="dame-category-shop-btn" style="background-color: {{ block.settings.button_bg_color }}; color: {{ block.settings.button_text_color }}; border-color: {{ block.settings.button_bg_color }};">
                      {{ block.settings.button_text }}
                      <span class="dame-shop-arrow">→</span>
                    </span>
                  {% endcomment %}
                  <span class="button">
                    {{ block.settings.button_text }}
                    <span class="dame-shop-arrow">→</span>
                  </span>
                {% endif %}
              </a>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </section>
</div>

