{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="about-us-stats color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="about-us-stats__header">
        <h2 class="about-us-stats__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.text != blank -%}
          <div class="about-us-stats__text rte">{{ section.settings.text }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="about-us-stats__grid grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop">
        {%- for block in section.blocks -%}
          <div class="about-us-stats__item grid__item" {{ block.shopify_attributes }}>
            {%- if block.settings.number != blank -%}
              <div class="about-us-stats__number" data-target="{{ block.settings.number }}">
                0
              </div>
            {%- endif -%}

            {%- if block.settings.suffix != blank -%}
              <span class="about-us-stats__suffix">{{ block.settings.suffix }}</span>
            {%- endif -%}

            {%- if block.settings.label != blank -%}
              <h3 class="about-us-stats__label">{{ block.settings.label }}</h3>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
