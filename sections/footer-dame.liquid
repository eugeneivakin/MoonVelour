    --dame-footer-column-title-color: {{ section.settings.column_title_color }};
    --dame-footer-link-size: {{ section.settings.link_size }}px;
    --dame-footer-link-color: {{ section.settings.link_color }};
    --dame-footer-link-hover-color: {{ section.settings.link_hover_color }};
  }

  .footer-dame-wrapper {
    position: relative;
    background: {{ section.settings.section_background_gradient }};
    padding-top: var(--dame-footer-padding-top-desktop);
    padding-bottom: var(--dame-footer-padding-bottom-desktop);
    {% comment %} padding-left: var(--dame-footer-padding-left-desktop);
    padding-right: var(--dame-footer-padding-right-desktop); {% endcomment %}
    overflow: hidden;
  }

  .footer-dame-wrapper::before {
    content: '';
    position: absolute;
    width: {{ section.settings.circle_1_size }}px;
    height: {{ section.settings.circle_1_size }}px;
    border-radius: 50%;
    background: {{ section.settings.circle_1_gradient }};
    top: {{ section.settings.circle_1_top }}px;
    left: {{ section.settings.circle_1_left }}px;
    z-index: 0;
  }

  .footer-dame-wrapper::after {
    content: '';
    position: absolute;
    width: {{ section.settings.circle_2_size }}px;
    height: {{ section.settings.circle_2_size }}px;
    border-radius: 50%;
    background: {{ section.settings.circle_2_gradient }};
    bottom: {{ section.settings.circle_2_bottom }}px;
    right: {{ section.settings.circle_2_right }}px;
    z-index: 0;
  }

  @media screen and (max-width: 749px) {
    .footer-dame-wrapper {
      padding-top: var(--dame-footer-padding-top-mobile);
      padding-bottom: var(--dame-footer-padding-bottom-mobile);
      padding-left: var(--dame-footer-padding-left-mobile);
      padding-right: var(--dame-footer-padding-right-mobile);
    }
  }
</style>

<style>
  #footer-{{ section.id }} .dame-footer {
    position: relative;
    z-index: 1;
    max-width: var(--dame-footer-max-width);
    margin: 0 auto;
  }

  #footer-{{ section.id }} .dame-footer-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
  }

  #footer-{{ section.id }} .dame-newsletter-section {
    display: grid;
    grid-template-columns: 1fr 2fr;
    align-items: baseline;
    gap: 40px;
  }

  #footer-{{ section.id }} .dame-newsletter-title {
    font-size: var(--dame-footer-newsletter-title-size-desktop);
    color: var(--dame-footer-newsletter-title-color);
    font-weight: {{ section.settings.newsletter_title_font_weight }};
    margin: 0;
    letter-spacing: -0.5px;
  }

  #footer-{{ section.id }} .dame-newsletter-form {
    position: relative;
    max-width: 800px;
  }

  #footer-{{ section.id }} .dame-newsletter-input-group {
    position: relative;
    display: flex;
    align-items: center;
    background: {{ section.settings.input_background_color }};
    border: {{ section.settings.input_border_width }}px solid {{ section.settings.input_border_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    padding: {{ section.settings.input_padding_vertical }}px {{ section.settings.input_padding_horizontal }}px;
    gap: 20px;
  }

  #footer-{{ section.id }} .dame-newsletter-input {
    flex: 1;
    border: none;
    background: transparent;
    font-size: {{ section.settings.input_font_size }}px;
    color: var(--dame-footer-newsletter-title-color);
    font-weight: 400;
    outline: none;
    letter-spacing: -0.3px;
  }

  #footer-{{ section.id }} .dame-newsletter-input:focus {
    outline: none;
    border: none;
    box-shadow: none;
  }

  #footer-{{ section.id }} .dame-newsletter-input::placeholder {
    color: var(--dame-footer-newsletter-title-color);
    opacity: 0.6;
    font-style: normal;
  }

  #footer-{{ section.id }} .dame-newsletter-separator {
    color: var(--dame-footer-newsletter-title-color);
    opacity: 0.4;
    font-size: {{ section.settings.input_font_size }}px;
    line-height: 1;
  }

  #footer-{{ section.id }} .dame-newsletter-submit {
    background: none;
    border: none;
    font-size: {{ section.settings.button_font_size }}px;
    color: var(--dame-footer-newsletter-title-color);
    cursor: pointer;
    padding: 0;
    letter-spacing: 0.5px;
    transition: opacity 0.3s;
    text-transform: uppercase;
    white-space: nowrap;
    opacity: 0.7;
  }

  #footer-{{ section.id }} .dame-newsletter-submit.has-input {
    opacity: 1;
  }

  #footer-{{ section.id }} .dame-newsletter-submit.has-input:hover {
    opacity: 0.7;
  }

  #footer-{{ section.id }} .dame-newsletter-success {
    padding: 10px 0 0 0;
    background-color: transparent;
    color: var(--dame-footer-newsletter-title-color);
    border-radius: 0;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: -0.3px;
  }

  #footer-{{ section.id }} .dame-newsletter-error {
    padding: 15px;
    background-color: {{ section.settings.error_bg_color }};
    color: {{ section.settings.error_text_color }};
    border-radius: 8px;
    margin-top: 15px;
    font-size: 14px;
  }

  #footer-{{ section.id }} .dame-footer-links {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.columns_gap }}px;
    padding-top: {{ section.settings.links_padding_top }}px;
  }

  #footer-{{ section.id }} .dame-footer-column {
    display: flex;
    flex-direction: column;
  }

  #footer-{{ section.id }} .dame-column-title {
    font-size: var(--dame-footer-column-title-size);
    color: var(--dame-footer-column-title-color);
    font-weight: {{ section.settings.column_title_font_weight }};
    margin: 0 0 {{ section.settings.column_title_margin_bottom }}px 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  #footer-{{ section.id }} .dame-column-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  #footer-{{ section.id }} .dame-column-links li {
    margin: 0;
  }

  #footer-{{ section.id }} .dame-column-links a {
    font-size: var(--dame-footer-link-size);
    color: var(--dame-footer-link-color);
    text-decoration: none;
    transition: color 0.3s;
    display: inline-block;
    position: relative;
  }

  #footer-{{ section.id }} .dame-column-links a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0%;
    height: 1px;
    background-color: var(--dame-footer-link-hover-color);
    transition: width 0.3s ease-out;
  }

  #footer-{{ section.id }} .dame-column-links a:hover {
    color: var(--dame-footer-link-hover-color);
  }

  #footer-{{ section.id }} .dame-column-links a:hover::after {
    width: 100%;
  }

  #footer-{{ section.id }} .dame-footer-copyright {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  #footer-{{ section.id }} .dame-copyright-text {
    font-size: {{ section.settings.copyright_text_size }}px;
    color: {{ section.settings.copyright_text_color }};
    line-height: 1.6;
  }

  #footer-{{ section.id }} .dame-footer-dot {
    width: {{ section.settings.dot_size }}px;
    height: {{ section.settings.dot_size }}px;
    background-color: {{ section.settings.dot_color }};
    border-radius: 50%;
    display: inline-block;
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    #footer-{{ section.id }} .dame-footer-links {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    #footer-{{ section.id }} .dame-newsletter-section {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    #footer-{{ section.id }} .dame-newsletter-title {
      font-size: var(--dame-footer-newsletter-title-size-mobile);
    }

    #footer-{{ section.id }} .dame-newsletter-form {
      max-width: 100%;
      width: 100%;
    }

    #footer-{{ section.id }} .dame-newsletter-input-group {
      padding: {{ section.settings.input_padding_vertical }}px {{ section.settings.input_padding_horizontal | divided_by: 2 }}px;
      gap: 15px;
    }

    #footer-{{ section.id }} .dame-newsletter-input {
      font-size: 16px;
    }

    #footer-{{ section.id }} .dame-newsletter-separator {
      font-size: 16px;
    }

    #footer-{{ section.id }} .dame-newsletter-submit {
      font-size: 14px;
    }

    #footer-{{ section.id }} .dame-footer-links {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.columns_gap_mobile }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterInput = document.querySelector('#footer-{{ section.id }} .dame-newsletter-input');
    const submitButton = document.querySelector('#footer-{{ section.id }} .dame-newsletter-submit');

    if (newsletterInput && submitButton) {
      function updateButtonState() {
        if (newsletterInput.value.trim().length > 0) {
          submitButton.classList.add('has-input');
        } else {
          submitButton.classList.remove('has-input');
        }
      }

      newsletterInput.addEventListener('input', updateButtonState);
      updateButtonState();
    }
  });
</script>

