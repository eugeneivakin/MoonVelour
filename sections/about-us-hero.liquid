{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.text_background_color != blank -%}
    .about-us-hero__text-background {
      background-color: {{ section.settings.text_background_color }};
      opacity: {{ section.settings.text_background_opacity | divided_by: 100.0 }};
    }
  {%- endif -%}
  .about-us-hero__caption,
  .about-us-hero__text,
  .about-us-hero__heading {
    {%- if section.settings.text_color != blank -%}
      color: {{ section.settings.text_color }};
    {%- endif -%}
  }
{%- endstyle -%}


<div class="about-us-hero color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- if section.settings.background_image != blank -%}
    <div class="about-us-hero__background">
      {{
        section.settings.background_image
        | image_url: width: section.settings.background_image.width
        | image_tag: loading: 'lazy', class: 'about-us-hero__bg-image', alt: section.settings.background_image.alt | escape
      }}
    </div>
    <div class="about-us-hero__overlay"></div>
  {%- endif -%}

  <div class="about-us-hero__shapes">
    <div class="shape shape--circle"></div>
    <div class="shape shape--triangle"></div>
    <div class="shape shape--square"></div>
    <div class="shape shape--hexagon"></div>
    <div class="shape shape--circle shape--small"></div>
    <div class="shape shape--triangle shape--small"></div>
  </div>

  <div class="page-width about-us-hero__content-container">
    <div class="about-us-hero__content">
      {%- if section.settings.text_background_color != blank or section.settings.text_background_opacity > 0 -%}
        <div class="about-us-hero__text-background"></div>
      {%- endif -%}
      
      <div class="about-us-hero__content-inner">
        {%- if section.settings.caption != blank -%}
          <p class="about-us-hero__caption">{{ section.settings.caption | escape }}</p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h1 class="about-us-hero__heading inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="about-us-hero__text rte">{{ section.settings.text }}</div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a
            {% if section.settings.button_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.button_link }}"
            {% endif %}
            class="button about-us-hero__button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
          >
            {{ section.settings.button_label | escape }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  div.about-us-hero__content-container{
    max-width: 88%;
  }
  .about-us-hero {
    position: relative;
    overflow: hidden;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .about-us-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    z-index: 0;
    will-change: transform;
  }

  .about-us-hero__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.1);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .about-us-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.5) 100%);
    z-index: 1;
    animation: gradientShift 8s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%, 100% {
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.5) 100%);
    }
    50% {
      background: linear-gradient(225deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.4) 50%, rgba(0, 0, 0, 0.3) 100%);
    }
  }

  .about-us-hero__shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    opacity: 0.15;
    animation: float 20s ease-in-out infinite;
  }

  .shape--circle {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.1));
    top: 10%;
    left: 10%;
    animation-delay: 0s;
    animation-duration: 25s;
  }

  .shape--triangle {
    width: 0;
    height: 0;
    border-left: 60px solid transparent;
    border-right: 60px solid transparent;
    border-bottom: 100px solid rgba(255, 255, 255, 0.2);
    top: 20%;
    right: 15%;
    animation-delay: 2s;
    animation-duration: 22s;
  }

  .shape--square {
    width: 80px;
    height: 80px;
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.1));
    transform: rotate(45deg);
    bottom: 15%;
    left: 20%;
    animation-delay: 4s;
    animation-duration: 28s;
  }

  .shape--hexagon {
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.15);
    clip-path: polygon(30% 0%, 70% 0%, 100% 50%, 70% 100%, 30% 100%, 0% 50%);
    top: 60%;
    right: 25%;
    animation-delay: 1s;
    animation-duration: 24s;
  }

  .shape--small {
    width: 50px;
    height: 50px;
  }

  .shape--small.shape--circle {
    bottom: 25%;
    right: 10%;
    animation-delay: 3s;
    animation-duration: 20s;
  }

  .shape--small.shape--triangle {
    width: 0;
    height: 0;
    border-left: 30px solid transparent;
    border-right: 30px solid transparent;
    border-bottom: 50px solid rgba(255, 255, 255, 0.2);
    top: 40%;
    left: 5%;
    animation-delay: 5s;
    animation-duration: 26s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(30px, -30px) rotate(90deg);
    }
    50% {
      transform: translate(-20px, 20px) rotate(180deg);
    }
    75% {
      transform: translate(20px, 30px) rotate(270deg);
    }
  }

  .about-us-hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .about-us-hero__text-background {
    display: block !important;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: calc(100% + 80px);
    max-width: calc(100% + 80px);
    height: calc(100% + 60px);
    border-radius: 12px;
    z-index: 0;
    pointer-events: none;
  }

  .about-us-hero__content-inner {
    position: relative;
    z-index: 1;
  }

  .about-us-hero__caption {
    font-size: 1.4rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.6rem;
    opacity: 0;
    animation: slideDownFade 1s ease-out 0.3s forwards;
  }

  .about-us-hero__heading {
    margin-bottom: 2rem;
    opacity: 0;
    animation: slideUpFade 1s ease-out 0.6s forwards;
    transform: translateY(30px);
  }

  .about-us-hero__text {
    font-size: 1.8rem;
    line-height: 1.6;
    margin-bottom: 3rem;
    opacity: 0;
    animation: slideUpFade 1s ease-out 0.9s forwards;
    transform: translateY(30px);
  }

  .about-us-hero__button {
    margin-top: 2rem;
    opacity: 0;
    animation: scaleFade 0.8s ease-out 1.2s forwards;
    transform: scale(0.8);
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .about-us-hero__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .about-us-hero__button:hover::before {
    left: 100%;
  }

  .about-us-hero__button:hover {
    transform: scale(1.05);
  }

  @keyframes slideDownFade {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 0.9;
      transform: translateY(0);
    }
  }

  @keyframes slideUpFade {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleFade {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media screen and (max-width: 749px) {
    .about-us-hero {
      min-height: 50vh;
    }

    .about-us-hero__caption {
      font-size: 1.2rem;
    }

    .about-us-hero__text {
      font-size: 1.6rem;
    }

    .about-us-hero__text-background {
      width: calc(100% + 40px);
      max-width: calc(100% + 40px);
      height: calc(100% + 40px);
      border-radius: 8px;
    }

    .shape {
      opacity: 0.1;
    }

    .shape--circle,
    .shape--square,
    .shape--hexagon {
      width: 60px;
      height: 60px;
    }

    .shape--triangle {
      border-left: 30px solid transparent;
      border-right: 30px solid transparent;
      border-bottom: 50px solid rgba(255, 255, 255, 0.2);
    }
  }
{% endstylesheet %}

<script>
  (function() {
    const heroSection = document.querySelector('.about-us-hero');
    const background = heroSection?.querySelector('.about-us-hero__background');
    const bgImage = heroSection?.querySelector('.about-us-hero__bg-image');
    
    if (!heroSection || !background || !bgImage) return;

    let ticking = false;

    function updateParallax() {
      const rect = heroSection.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      
      if (rect.top < windowHeight && rect.bottom > 0) {
        const scrolled = window.pageYOffset || document.documentElement.scrollTop;
        const heroTop = heroSection.offsetTop;
        const heroHeight = heroSection.offsetHeight;
        const scrollProgress = (scrolled - heroTop + windowHeight) / (heroHeight + windowHeight);
        
        const parallaxOffset = scrollProgress * 100;
        background.style.transform = `translateY(${parallaxOffset * 0.3}px)`;
        
        const scale = 1.1 + scrollProgress * 0.1;
        bgImage.style.transform = `scale(${scale})`;
      }
      
      ticking = false;
    }

    function requestTick() {
      if (!ticking) {
        window.requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }

    window.addEventListener('load', function() {
      setTimeout(function() {
        heroSection.classList.add('hero-loaded');
      }, 100);
    });

    window.addEventListener('scroll', requestTick, { passive: true });
    window.addEventListener('resize', requestTick);
    
    updateParallax();
  })();
</script>

