      padding-bottom: var(--video-hero-padding-bottom-mobile);
      padding-left: var(--video-hero-padding-left-mobile);
      padding-right: var(--video-hero-padding-right-mobile);
    }
  }
</style>

<style>
  #video-hero-{{ section.id }} .video-hero-section {
    position: relative;
    min-height: var(--video-hero-min-height);
    max-width: var(--video-hero-max-width);
    margin: 0 auto;
    display: flex;
    align-items: {{ section.settings.content_vertical_alignment }};
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }

  #video-hero-{{ section.id }} .video-hero-media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  #video-hero-{{ section.id }} .video-hero-desktop,
  #video-hero-{{ section.id }} .video-hero-mobile {
    width: 100%;
    height: 100%;
  }

  #video-hero-{{ section.id }} .video-hero-desktop video,
  #video-hero-{{ section.id }} .video-hero-mobile video,
  #video-hero-{{ section.id }} .video-hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.media_position_desktop }};
    border-radius: {{ section.settings.border_radius }}px;
  }

  #video-hero-{{ section.id }} .video-hero-mobile {
    display: none;
  }

  #video-hero-{{ section.id }} .video-hero-overlay {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ section.settings.overlay_color }};
    opacity: var(--video-hero-overlay-opacity);
    z-index: 1;
    pointer-events: none;
    border-radius: {{ section.settings.border_radius }}px;
  }

  #video-hero-{{ section.id }} .video-hero-content-wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: {{ section.settings.content_padding_top }}px {{ section.settings.content_padding_right }}px {{ section.settings.content_padding_bottom }}px {{ section.settings.content_padding_left }}px;
    display: flex;
    align-items: {{ section.settings.content_vertical_alignment }};
    justify-content: {{ section.settings.content_horizontal_alignment }};
  }

  #video-hero-{{ section.id }} .video-hero-content {
    max-width: {{ section.settings.content_max_width }}px;
    text-align: {{ section.settings.content_text_alignment }};
  }

  #video-hero-{{ section.id }} .video-hero-content p {
    margin: 0;
  }

  #video-hero-{{ section.id }} .video-hero-rating {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 30px;
    justify-content: {{ section.settings.content_text_alignment }};
  }

  #video-hero-{{ section.id }} .video-hero-stars {
    color: var(--video-hero-rating-text-color);
    font-size: 14px;
    letter-spacing: 2px;
  }

  #video-hero-{{ section.id }} .video-hero-rating-text {
    font-size: var(--video-hero-rating-text-size-desktop);
    color: var(--video-hero-rating-text-color);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 600;
  }

  #video-hero-{{ section.id }} .video-hero-title {
    font-size: var(--video-hero-title-size-desktop);
    line-height: 1.1;
    margin-bottom: 25px;
    color: var(--video-hero-title-color);
    font-weight: {{ section.settings.title_font_weight }};
    letter-spacing: -1px;
  }

  #video-hero-{{ section.id }} .video-hero-subtitle {
    font-size: var(--video-hero-subtitle-size-desktop);
    line-height: 1.7;
    margin-bottom: 40px;
    color: var(--video-hero-subtitle-color);
    font-weight: {{ section.settings.subtitle_font_weight }};
    letter-spacing: 0.2px;
  }

  #video-hero-{{ section.id }} .video-hero-buttons {
    display: flex;
    flex-direction: {{ section.settings.buttons_direction }};
    gap: {{ section.settings.buttons_gap }}px;
    width: fit-content;
    {% if section.settings.content_text_alignment == 'center' %}
      margin: 0 auto;
    {% elsif section.settings.content_text_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }

  #video-hero-{{ section.id }} .video-hero-btn {
    padding: 18px 50px;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    border-radius: {{ section.settings.button_border_radius }}px;
    background-size: 200% 200%;
    background-position: left center;
  }

  #video-hero-{{ section.id }} .video-hero-btn-primary {
    background: var(--video-hero-btn-primary-bg);
    color: var(--video-hero-btn-primary-color);
  }

  #video-hero-{{ section.id }} .video-hero-btn-primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    background-position: right center;
  }

  #video-hero-{{ section.id }} .video-hero-btn-secondary {
    background: var(--video-hero-btn-secondary-bg);
    color: var(--video-hero-btn-secondary-color);
  }

  #video-hero-{{ section.id }} .video-hero-btn-secondary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    background-position: right center;
  }

  #video-hero-{{ section.id }} .video-hero-features-bar {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 10;
    background: var(--video-hero-features-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    padding: {{ section.settings.features_padding_top }}px {{ section.settings.features_padding_right }}px {{ section.settings.features_padding_bottom }}px {{ section.settings.features_padding_left }}px;
    border-radius: 0 0 {{ section.settings.border_radius }}px {{ section.settings.border_radius }}px;
  }

  #video-hero-{{ section.id }} .video-hero-features-content {
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 30px;
    flex-wrap: wrap;
    max-width: var(--video-hero-max-width);
    margin: 0 auto;
  }

  #video-hero-{{ section.id }} .video-hero-feature-item {
    flex: 1;
    min-width: 200px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 12px;
  }

  #video-hero-{{ section.id }} .video-hero-feature-icon {
    color: {{ section.settings.feature_icon_color }};
    opacity: 0.9;
    font-size: 24px;
    flex-shrink: 0;
  }

  #video-hero-{{ section.id }} .video-hero-feature-icon svg {
    width: 24px;
    height: 24px;
    stroke: currentColor;
    display: block;
  }

  #video-hero-{{ section.id }} .video-hero-feature-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2px;
  }

  #video-hero-{{ section.id }} .video-hero-feature-title {
    font-size: {{ section.settings.feature_title_size_desktop }}px;
    font-weight: 500;
    line-height: 1.3;
    margin: 0;
    letter-spacing: 0.5px;
    color: var(--video-hero-feature-title-color);
  }

  #video-hero-{{ section.id }} .video-hero-feature-description {
    font-size: {{ section.settings.feature_description_size_desktop }}px;
    margin: 0;
    font-weight: 300;
    letter-spacing: 0.3px;
    color: var(--video-hero-feature-desc-color);
  }

  @media screen and (max-width: 749px) {
    #video-hero-{{ section.id }} .video-hero-section {
      min-height: var(--video-hero-min-height-mobile);
    }

    #video-hero-{{ section.id }} .video-hero-desktop {
      display: none;
    }

    #video-hero-{{ section.id }} .video-hero-mobile {
      display: block;
    }

    #video-hero-{{ section.id }} .video-hero-mobile video,
    #video-hero-{{ section.id }} .video-hero-image {
      object-position: {{ section.settings.media_position_mobile }};
    }

    #video-hero-{{ section.id }} .video-hero-content-wrapper {
      padding: {{ section.settings.content_padding_top_mobile }}px {{ section.settings.content_padding_right_mobile }}px {{ section.settings.content_padding_bottom_mobile }}px {{ section.settings.content_padding_left_mobile }}px;
      align-items: {{ section.settings.content_vertical_alignment_mobile }};
      justify-content: {{ section.settings.content_horizontal_alignment_mobile }};
    }

    #video-hero-{{ section.id }} .video-hero-content {
      text-align: {{ section.settings.content_text_alignment_mobile }};
    }

    #video-hero-{{ section.id }} .video-hero-rating {
      justify-content: {{ section.settings.content_text_alignment_mobile }};
      margin-bottom: 20px;
    }

    #video-hero-{{ section.id }} .video-hero-rating-text {
      font-size: var(--video-hero-rating-text-size-mobile);
    }

    #video-hero-{{ section.id }} .video-hero-title {
      font-size: var(--video-hero-title-size-mobile);
      margin-bottom: 20px;
    }

    #video-hero-{{ section.id }} .video-hero-subtitle {
      font-size: var(--video-hero-subtitle-size-mobile);
      margin-bottom: 30px;
    }

    #video-hero-{{ section.id }} .video-hero-buttons {
      flex-direction: {{ section.settings.buttons_direction_mobile }};
      {% if section.settings.content_text_alignment_mobile == 'center' %}
        margin: 0 auto;
      {% elsif section.settings.content_text_alignment_mobile == 'right' %}
        margin-left: auto;
      {% elsif section.settings.content_text_alignment_mobile == 'left' %}
        margin-left: 0;
      {% endif %}
    }

    #video-hero-{{ section.id }} .video-hero-btn {
      padding: 15px 40px;
    }

    #video-hero-{{ section.id }} .video-hero-features-bar {
      position: relative;
      padding: {{ section.settings.features_padding_top_mobile }}px {{ section.settings.features_padding_right_mobile }}px {{ section.settings.features_padding_bottom_mobile }}px {{ section.settings.features_padding_left_mobile }}px;
    }

    #video-hero-{{ section.id }} .video-hero-features-content {
      flex-direction: column;
      gap: 20px;
    }

    #video-hero-{{ section.id }} .video-hero-feature-item {
      min-width: 100%;
    }

    #video-hero-{{ section.id }} .video-hero-feature-icon svg {
      width: 20px;
      height: 20px;
    }

    #video-hero-{{ section.id }} .video-hero-feature-title {
      font-size: {{ section.settings.feature_title_size_mobile }}px;
    }

    #video-hero-{{ section.id }} .video-hero-feature-description {
      font-size: {{ section.settings.feature_description_size_mobile }}px;
    }
  }
</style>

