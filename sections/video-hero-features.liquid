<div id="video-hero-{{ section.id }}" class="video-hero-wrapper {% if section.settings.custom_classes %}{{ section.settings.custom_classes }}{% endif %}">
  <section class="video-hero-section">
    <div class="video-hero-media">
      {% if section.settings.desktop_video != blank %}
        <div class="video-hero-desktop">
          <video-section data-video-hero>
            <video
              playsinline
              autoplay
              loop
              muted
              preload="metadata"
              {% if section.settings.desktop_video_poster != blank %}
                poster="{{ section.settings.desktop_video_poster | image_url: width: 1920 }}"
              {% endif %}>
              <source src="{{ section.settings.desktop_video }}" type="video/mp4">
            </video>
          </video-section>
        </div>
      {% elsif section.settings.desktop_image != blank %}
        <div class="video-hero-desktop">
          {{ section.settings.desktop_image | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'video-hero-image', alt: section.settings.desktop_image.alt | escape }}
        </div>
      {% endif %}

      {% if section.settings.mobile_video != blank %}
        <div class="video-hero-mobile">
          <video-section data-video-hero>
            <video
              playsinline
              autoplay
              loop
              muted
              preload="metadata"
              {% if section.settings.mobile_video_poster != blank %}
                poster="{{ section.settings.mobile_video_poster | image_url: width: 750 }}"
              {% endif %}>
              <source src="{{ section.settings.mobile_video }}" type="video/mp4">
            </video>
          </video-section>
        </div>
      {% elsif section.settings.mobile_image != blank %}
        <div class="video-hero-mobile">
          {{ section.settings.mobile_image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'video-hero-image', alt: section.settings.mobile_image.alt | escape }}
        </div>
      {% endif %}
    </div>

    <div class="video-hero-overlay"></div>

    <div class="video-hero-content-wrapper">
      <div class="video-hero-content">
        {% if section.settings.show_rating %}
          <div class="video-hero-rating">
            {% if section.settings.rating_icon != blank %}
              <div class="video-hero-stars">{{ section.settings.rating_icon }}</div>
            {% endif %}
            {% if section.settings.rating_text != blank %}
              <div class="video-hero-rating-text">{{ section.settings.rating_text }}</div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.title != blank %}
          <h1 class="video-hero-title">{{ section.settings.title }}</h1>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <div class="video-hero-subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}

        <div class="video-hero-buttons">
          {% if section.settings.button_primary_text != blank %}
            <a href="{{ section.settings.button_primary_url }}" class="video-hero-btn video-hero-btn-primary">
              {{ section.settings.button_primary_text }}
            </a>
          {% endif %}

          {% if section.settings.button_secondary_text != blank %}
            <a href="{{ section.settings.button_secondary_url }}" class="video-hero-btn video-hero-btn-secondary">
              {{ section.settings.button_secondary_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    {% if section.blocks.size > 0 and section.settings.show_features %}
      <div class="video-hero-features-bar">
        <div class="video-hero-features-content">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'feature' %}
                <div class="video-hero-feature-item" {{ block.shopify_attributes }}>
                  {% if block.settings.feature_icon != blank %}
                    <div class="video-hero-feature-icon">{{ block.settings.feature_icon }}</div>
                  {% endif %}
                  <div class="video-hero-feature-text">
                    {% if block.settings.feature_title != blank %}
                      <h3 class="video-hero-feature-title">{{ block.settings.feature_title }}</h3>
                    {% endif %}
                    {% if block.settings.feature_description != blank %}
                      <p class="video-hero-feature-description">{{ block.settings.feature_description }}</p>
                    {% endif %}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </section>
</div>

<style>
